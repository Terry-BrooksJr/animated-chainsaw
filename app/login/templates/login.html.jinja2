{% extends "layout.html.jinja2" %}
    {% block content %}
    <div class="box-form">
      <div class="left">
            <div class="overlay">
                <h1>Safari Life</h1>
                <h2> Child Care Management System</h2>
                <span>
			
		</span>
            </div>
        </div>

        <div class="flask-message-container">
            {% with shoutouts = get_flashed_messages(with_categories=true) %} 
            {% if shoutouts %}
            {% for category, shoutout in shoutouts%}
            <div class="alert alert-{{category}}">
                {{shoutout}}
            </div>
            {% endfor %} 
            {% endif %} {% endwith %}
        <div class="right">
            <div id="title-container">
            <h5 id="login_title">Login</h5>
            </div>
        
            <div class="inputs login-form">
                <form action="/authorize_user" method="post">
                    {{ form.csrf_token }} 
                    {{form.username.label}}
                     {{form.username(size=32)}} {{form.password.label}}
                     {{form.password(size=32)}} 
                    {{form.submit(class_="button", id_="submit")}}
                </form>
            </div>

      <div class="forgot-password-copy-contatiner">
            <i class="fa fa-question-circle-o fa-3x" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Reach out to your daycare director"></i>
            <p class="forgot-password-copy">Don't have an account or forgot your password? </p>
            </div>
            </div>
            <br>
        </div>
    </div>
{% endblock %}