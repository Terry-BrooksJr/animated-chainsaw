{% extends "layout.html.jinja" %}
    {% block content %}
    <div class="box-form">
      <div class="left">
            <div class="overlay">
                <h1 id="Login-T">Safari Life</h1>
                <h2> Child Care Management System</h2>
                <span>
			
		</span>
            </div>
        </div>

        <div class="flask-message-container">
            {% with shoutouts = get_flashed_messages(with_categories=true) %} 
            {% if shoutouts %}
            {% for category, shoutout in shoutouts%}
            <div class="alert alert-{{category}}">
                {{shoutout}}
            </div>
            {% endfor %} 
            {% endif %} {% endwith %}
        <div id="entire-login" class="right">
            <h5 id="login_title">Login</h5>
        
            <div class="inputs login-form">
                <form action="/authorize_user" method="post">
                    {{ form.csrf_token }} 
<div class="login-form-field">
 {{form.username(size=32)}}                     
{{form.username.label}}
</div>
<div class="login-form-field">
                     {{form.password(size=32)}} 
                    {{form.password.label}}
</div>
<diV class="remember-me--forget-password">
                    {{form.remember_me.label}}
{{ form.remember_me()}}
</diV>
                      {{ form.recaptcha() }}
                    {{form.submit(class_="button", id_="submit")}}
                        <input type=hidden value="{{'url_for(dashboard_bp.dashboard')2 }}" name=next>

                </form>
            </div>
      <div class="forgot-password-copy-contatiner">
            <i class="fa fa-question-circle-o fa-3x" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Reach out to your daycare director"></i>
            <p id='no-password' class="forgot-password-copy">Don't have an account or forgot your password? </p>
            </div>
            </div>
            <br>
        </div>
    </div>
{% endblock %}
